{
    "name": "highperapp/container",
    "description": "High-performance PSR-11 container",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "psr-11",
        "container",
        "dependency-injection",
        "high-performance",
        "c10m",
        "microservices",
        "php"
    ],
    "homepage": "https://github.com/highperapp/container",
    "authors": [
        {
            "name": "Raghuveer",
            "email": "raghuveer.dendukuri@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3|^8.4",
        "psr/container": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "symfony/var-dumper": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "HighPerApp\\HighPer\\Container\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HighPerApp\\HighPer\\Container\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform": {
            "php": "8.3.0"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "stan": "phpstan analyse --memory-limit=1G",
        "cs:check": "phpcs",
        "cs:fix": "phpcbf",
        "quality": [
            "@stan",
            "@cs:check",
            "@test"
        ]
    }
}